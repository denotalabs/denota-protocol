{
  "name": "denota-graph",
  "version": "0.1.0",
  "description": "Denota Protocol Graph",
  "author": "Denota Labs",
  "private": true,
  "scripts": {
    "clean": "rm -rf graph-node/data/",
    "start": "cd graph-node && docker-compose up",
    "build": "cd subgraph && graph build",
    "create-local": "graph create --node http://localhost:8020/ NotaRegistrar/${GRAPH_CHAIN}",
    "deploy-local": "npm run codegen && npm run deploy-local-subgraph",
    "remove-node": "cd graph-node && docker-compose down",
    "remove-local": "graph remove --node http://localhost:8020/ NotaRegistrar/NotaRegistrar",
    "deploy-local-subgraph": "cd subgraph && graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 NotaRegistrar/${GRAPH_CHAIN}",
    "codegen": "cd subgraph && graph codegen",
    "prepare": "mustache subgraph/config/${GRAPH_CHAIN:-mumbai}.json subgraph/subgraph.template.yaml > subgraph/subgraph.yaml",
    "create-remote": "graph create --node ${GQL_HOST}:8020/ NotaRegistrar/${GRAPH_CHAIN}",
    "deploy-remote": "npm run codegen && npm run deploy-remote-subgraph",
    "remove-node-remote": "cd graph-node && docker-compose down",
    "remove-remote": "graph remove --node ${GQL_HOST}:8020/ NotaRegistrar/${GRAPH_CHAIN}",
    "deploy-remote-subgraph": "cd subgraph && graph deploy --node ${GQL_HOST}:8020/ --ipfs ${GQL_HOST}:5001 NotaRegistrar/${GRAPH_CHAIN}"
  },
  "devDependencies": {
    "mustache": "^3.2.1"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.59.0",
    "@graphprotocol/graph-ts": "^0.31.0"
  }
}
